{
    "manifest_version": 3,
    "name": "GrindTrack",
    "version": "1.0.0",
    "description": "Displays your working time by tracking time spent on productive websites.",
    "action": {
      "default_popup": "index.html",
      "width": 400
    },
    "permissions": ["tabs", "storage", "activeTab", "scripting", "alarms", "offscreen"],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    }

  }
